%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %link{:rel => "shortcut icon", :type => "image/png", :href => "/meta/favicon.ico"}
    %link{:rel => "stylesheet", :href => "/css/bootstrap.min.css"}

  
  %body{:style => "background-color: #eef5f9;"}
    .container
      %div{:class => "row justify-content-center mt-6"}
        .col-12
          %div{:class => "card", :style => "max-width: 20rem; margin: auto auto; margin-top: 16vh; border-radius: 10px;"}
            =image_tag("/logo-rifamax.png", :style => "max-width: 12rem; margin: 0 auto -45px auto", alt: "Logo Rifamax")
            .card-body
            %hr
              .row
                = render 'place/data'
                = render 'place/client'